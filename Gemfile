source 'https://rubygems.org'

gem 'rails', '3.2.7'
gem 'foreman'
gem 'thin'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'resque'
gem 'twitter-bootstrap-rails'
gem 'underscore-rails'
gem 'spinjs-rails'
gem 'httparty', '0.7.8'
gem 'daemons-rails'
gem 'meta-spotify'
gem 'hallon'
gem 'hallon-openal'

group :development, :test do
  gem 'debugger'
  gem 'rspec-rails'
  gem 'capistrano'
end
